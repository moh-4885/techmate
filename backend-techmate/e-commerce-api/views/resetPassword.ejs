<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- <link href="css/output.css" rel="stylesheet" type="text/css"/> -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      function myFunction() {
        var password = document.getElementById("password");
        var passwordConfirm = document.getElementById("passwordConfirm");
        var temp = window.location.href.split("/");
        var token = temp[temp.length - 1];

        // console.log(password.value);
        // console.log(passwordConfirm.value);
        // console.log(token);
        axios
          .post(`http://localhost:3001/auth/reset/${token}`, {
            password: password.value,
            confiremedPassword: passwordConfirm.value,
          })
          .then((res) => {
            console.log(res);
          });
      }
    </script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.min.js"
      integrity="sha512-LUKzDoJKOLqnxGWWIBM4lzRBlxcva2ZTztO8bTcWPmDSpkErWx0bSP4pdsjNH8kiHAUPaT06UXcb+vOEZH+HpQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset password</title>
  </head>

  <body>
    <div class="h-screen flex justify-center items-center bg-blue-500">
      <div class="h-96 w-80 rounded-3xl bg-white">
        <div class="h-full p-4 grid grid-rows-4">
          <div class="flex justify-center items-center">
            <h1 class="font-semibold font">Reset password</h1>
          </div>

          <div
            class="row-span-3 grid grid-rows h-full p-4 items-center justify-center"
          >
            <label htmlFor="password">Password</label>
            <input
              type="password"
              id="password"
              class="border-2 px-2 py-1 rounded-xl border-black"
            />
            <label htmlFor="password">Confirm Password</label>
            <input
              type="password"
              id="passwordConfirm"
              class="border-2 px-2 py-1 rounded-xl border-black"
            />
            <br />
            <button
              id="myButton"
              onclick="myFunction()"
              class="bg-blue-500 p-1 rounded-2xl text-white"
            >
              Change password
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
